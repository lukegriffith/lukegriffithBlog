@model lukegriffithBlog.Models.Posts

@{
    ViewBag.Title = Model.title;
}


<div class="page-header">
    <h3> @Html.DisplayFor(model => Model.title) </h3>
    <h3><small>@Html.DisplayFor(model => Model.subTitle)</small></h3>
</div>

<strong><p>@Model.timePosted.ToShortDateString()</p></strong>
<div class="col-lg-12 well">
    @Html.Raw(Model.body)
</div>

<div class="col-lg-12">
    @foreach (var category in Model.category)
    {
        @Html.ActionLink(@category.title, "category", new { id = category.id }, new { @class = "btn btn-xs btn-default" })
    }
</div>
