@model lukegriffithBlog.Models.Posts

@{
    ViewBag.Title = Model.title;
}


<div class="page-header">
    <h1> @Html.DisplayFor(model => Model.title) </h1>
    <h1><small>@Html.DisplayFor(model => Model.subTitle)</small></h1>
</div>

<div class="col-lg-12 well">
    @Html.Raw(Model.body)
</div>

<div class="col-lg-12">
    @foreach (var category in Model.category)
    {
        @Html.ActionLink(@category.title, "category", new { id = category.id }, new { @class = "btn btn-xs btn-default" })
    }
</div>
