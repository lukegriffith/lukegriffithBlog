@model IEnumerable<lukegriffithBlog.Models.Posts>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        
        @foreach (var item in Model)
        {
            <div class="col-lg-12">
                <div class="panel-heading"><h1>@Html.ActionLink(@item.title, "Post", new { id = string.Format("{0}/{1}", item.id, item.urlSlug) })</h1><h1><small>@item.subTitle</small></h1></div>
                
                <div class="well">
                    @Html.Raw(item.body)
                </div>

                <div role="group">
                    <strong>categories: </strong>
                    @foreach (var category in item.category)
                    {
                        @Html.ActionLink(@category.title, "category", new { id = category.id }, new { @class = "btn btn-xs btn-default" })
                        

                    }
                </div>
                <div>
                    
                </div>
            </div>
        }
    
    </div>
</body>
</html>
