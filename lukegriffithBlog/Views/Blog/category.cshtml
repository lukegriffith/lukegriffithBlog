@model IEnumerable<lukegriffithBlog.Models.Posts>

@{
    ViewBag.Title = @ViewBag.category;
}

<h2>@ViewBag.category</h2>

@foreach (var item in Model)
{

    
    <div class="col-lg-12">
        <div class="page-header"><h3>@item.title</h3><h3><small>@item.subTitle</small></h3></div> 
        <strong><p>@item.timePosted.ToShortDateString()</p></strong>
        <div class="well">
            @Html.Raw(item.body)
        </div>

        

        <div>
            <strong>categories: </strong>
            @foreach (var category in item.category)
            {
                @Html.ActionLink(@category.title, "category", new { id = category.id }, new { @class = "btn btn-xs btn-default" })
                

            }
        </div>
        
    </div>
}